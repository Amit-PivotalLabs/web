<div class="md-main__inner md-grid" data-md-component="container">
  <div class="md-sidebar md-sidebar--primary" data-md-component="navigation">
    <div class="md-sidebar_scrollwrap">
      <div class="md-sidebar__inner">
        <nav class="md-nav md-nav--primary" data-md-level="0">
          <ul class="md-nav__list" data-md-scrollfix>
            <li class="md-nav__item md-nav__item--active md-nav__item--nested">
              <nav class="md-nav" data-md-component="collapsible" data-md-level="1">
                <label class="md-nav__title">Releases</label>
                <ul class="md-nav__list" data-md-scrollfix>
                  <li class="md-nav__item">
                    <a href="/releases/" title="Releases" class="md-nav__link">All Releases</a>
                  </li>
                  <li class="md-nav__item md-nav__item--active">
                    <a href="{{ .URL }}" title="{{ if .Releases }}{{ with index .Releases 0 }}{{ .Name }}{{ end }}{{ else }}{{ .Source.Short }}{{ end }}" class="md-nav__link md-nav__link--active">
                      {{ if .Releases }}
                        {{ with index .Releases 0 }}{{ .Name }}{{ end }}
                      {{ else }}
                        {{ .Source.Short }}
                      {{ end }}
                    </a>
                  </li>
                </ul>
              </nav>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
  <div class="md-sidebar md-sidebar--secondary" data-md-component="toc">
    <div class="md-sidebar__scrollwrap">
      <div class="md-sidebar__inner">
        <nav class="md-nav md-nav--secondary">
          <label class="md-nav__title" for="toc">Table of contents</label>
          <ul class="md-nav__list" data-md-scrollfix="">
            <li class="md-nav__item">
              <a href="#overview" title="Overview" class="md-nav__link">Overview</a>
            </li>
            <li class="md-nav__item">
              <a href="#latest" title="Latest Version" class="md-nav__link">Latest Version</a>
            </li>
            <li class="md-nav__item">
              <a href="#versions" title="All Versions" class="md-nav__link">All Versions</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
  <div class="md-content">
    <article class="md-content__inner md-typeset">
      {{ if .Releases }}
        <h1><code class="codehilite">{{ with index .Releases 0 }}{{ .Name }}{{ end }}</code> Release</span></h1>
      {{ else }}
        <h1><code class="codehilite">{{ .Source.Short }}</code> Release</h1>
      {{ end }}

      {{ if .Source.FromGithub }}
        You can find this release on GitHub at <a href="{{ .Source.GithubURL }}">{{ .Source.Short }}</a>.
      {{ end }}

      {{ if .Releases }}{{ with index .Releases 0 }}
        <h2 id="latest">Latest Version (v{{ .Version }})<a class="headerlink" href="#latest" title="Permanent link">&para;</a></h2>

        <p>You can upload the latest version, v{{ .Version }}, to your director with the <code>upload-release</code> command:</p>

        <div class="codehilite"><pre>bosh upload-release --sha1 {{ .TarballSHA1 }} \
  <a href="{{ .UserVisibleDownloadURL }}" style="color:inherit;">{{ .UserVisibleDownloadURL }}</a></pre></div>

        <p>Or reference it in your deployment manifest with:</p>

        <div class="codehilite"><pre>releases:
- name: {{ .Name }}
  url: <a href="{{ .UserVisibleDownloadURL }}" style="color:inherit;">{{ .UserVisibleDownloadURL }}</a>
  sha1: {{ .TarballSHA1 }}</pre></div>

      {{ end }}{{ end }}


      <h2 id="versions">All Versions<a class="headerlink" href="#older" title="Permanent link">&para;</a></h2>

      {{ if .Releases }}
        {{ range .Releases }}
          <h3 id="v{{ .Version }}">v{{ .Version }}<a class="headerlink" href="#v{{ .Version }}" title="Permanent link">&para;</a></h3>

          <ul>
            <li><a href="{{ .URL }}">See Usage Details</a></li>
            <li>
              <a href="{{ .DownloadURL }}">Download Tarball</a>
              &mdash;
              {{ if .TarballSHA1 }}
                SHA1 <code class="codehilite">{{ .TarballSHA1 }}</code>
              {{ end }}
            </li>
          </ul>
        {{ end }}
      {{ else }}
        <p class="empty">No release versions</p>
      {{ end }}
  </div>
</div>
